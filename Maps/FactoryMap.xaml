<Window x:Class="WpfApp1.Maps.FactoryMap"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1.Maps"
        mc:Ignorable="d"
        Title="FactoryMap"
        Height="auto" 
        Width="auto"
        Topmost="True"  
        Background="Transparent" 
        Opacity="0.9" 
        ScrollViewer.CanContentScroll="True"
        ResizeMode="CanResizeWithGrip" d:DesignWidth="733.504" d:DesignHeight="441.563">


    <Grid x:Name="LayoutRoot">
        <Grid.RowDefinitions>
            <RowDefinition Height="0"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Border Grid.Row="1" Name="border">
            <Image Name="image" 
                   Source="/Images/FactoryMap.jpg" 
                   Opacity="1" 
                   RenderTransformOrigin="0.5,0.5"
                   />
        </Border>
    </Grid>
</Window>
